<h1> Sign In </h1>

<%= form_with(url: session_path) do |form| %>
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "Sign in" %>

<% end %>

<p>
  <%= link_to "Forgot your password?", new_password_reset_path %>
</p>