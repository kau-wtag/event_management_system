<h1 class="text-2xl font-bold mb-6"><%= t('admin.categories.index_title') %></h1>

<%= link_to t('admin.categories.new_category'), new_admin_category_path, class: 'bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 transition duration-200 mb-4 inline-block' %>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white shadow-md rounded-lg">
    <thead>
      <tr class="bg-gray-100 border-b">
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700"><%= t('admin.categories.category_details.name') %></th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700"><%= t('admin.categories.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="px-4 py-2 text-sm text-gray-700"><%= category.name %></td>
          <td class="px-4 py-2 text-sm text-gray-700 space-x-2">
            <%= link_to t('admin.categories.edit'), edit_admin_category_path(category), class: 'text-white bg-yellow-500 px-3 py-1 rounded hover:bg-yellow-600 transition duration-200' %>
            <%= link_to t('admin.categories.delete'), admin_category_path(category), data: { turbo_method: :delete, turbo_confirm: t('admin.categories.confirm_delete') }, class: 'text-white bg-red-500 px-3 py-1 rounded hover:bg-red-600 transition duration-200' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
